<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".QuestionsListActivity">


    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:elevation="5dp"
        android:titleTextAppearance="@color/white"
        android:background="@color/toolbarGreen"/>

    <!-- animations occur behind background unless drawSelectorOnTop = true -->

    <ListView
        android:id="@+id/listview_results"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:drawSelectorOnTop="true"
        android:layout_weight="1"
        android:childDivider="@color/toolbarBrown"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_yelp_image"
        android:layout_gravity="end"
        android:background="@color/beige"/>

</LinearLayout>
